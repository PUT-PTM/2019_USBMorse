#include "main.h"
#include "morse.h"
#include <stdbool.h>
#include <string.h>
#include <stdio.h>





uint8_t DataToSend[40];
uint8_t MessageCounter = 0;
uint8_t MessageLength = 0;
//char CharArray[20]="";
char CharArray[20]="";

const char *a="._";


void MainFunction(){

}

void GetChars(uint32_t PressCounter){
		if(PressCounter<=6){
			strcat(CharArray,".");
		}
		else{
			strcat(CharArray,"_");
		}
}

void ThrowWord(){
	SearchSymbol();
}

void SearchSymbol(){
	if (true) {
		++MessageCounter;
		MessageLength = sprintf(DataToSend, "A");
		CDC_Transmit_FS(DataToSend, MessageLength);

	}
}
