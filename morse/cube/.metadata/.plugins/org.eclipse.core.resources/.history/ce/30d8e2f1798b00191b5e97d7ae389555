#include "main.h"
#include "morse.h"
#include<stdbool.h>




uint8_t DataToSend[40];
uint8_t MessageCounter = 0;
uint8_t MessageLength = 0;
char CharArray[10];
uint8_t Iterator=0;


void MainFunction(){

}

void GetChars(uint32_t PressCounter){
	size_t length= sizeof(CharArray)/sizeof(CharArray[0]);
	if(true){
		if(PressCounter<=6){
			CharArray[0]='.';
		}
		else{
			CharArray[0]='_';
		}
	}
}


void ThrowWord(){
	size_t length= sizeof(CharArray)/sizeof(CharArray[0]);
	if(CharArray[0]=='.'){
		++MessageCounter;
		MessageLength = sprintf(DataToSend, "Wiadomosc krotka %d\n\r", MessageCounter);
		CDC_Transmit_FS(DataToSend, MessageLength);
	}
	else if(CharArray[0]=='_'){
		++MessageCounter;
		MessageLength = sprintf(DataToSend, "Wiadomosc dluga %d\n\r", MessageCounter);
		CDC_Transmit_FS(DataToSend, MessageLength);
	}
}

